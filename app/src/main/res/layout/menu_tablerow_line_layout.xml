<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="left"
    >
    <include layout="@layout/menuicon_layout" android:id="@+id/colomn1"
        android:visibility="invisible"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"></include>

    <!--menuicon_layoutをincludeする-->
    <include layout="@layout/menuicon_layout" android:id="@+id/colomn2"
        android:visibility="invisible" android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"></include>

    <!--menuicon_layoutをincludeする-->
    <include layout="@layout/menuicon_layout" android:id="@+id/colomn3"
        android:visibility="invisible" android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"></include>

    <!--menuicon_layoutをincludeする-->
    <include layout="@layout/menuicon_layout" android:id="@+id/colomn4"
        android:visibility="invisible" android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"></include>

    <!--列を増やす場合はmenuicon_layoutをincludeする-->
</LinearLayout>